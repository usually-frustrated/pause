<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>[[ .basics.name ]] - Resume</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      background: #f5f5f5;
      padding: 20px;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      background: white;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 40px;
      text-align: center;
    }

    header h1 {
      font-size: 2.5em;
      margin-bottom: 10px;
      font-weight: 700;
    }

    header .subtitle {
      font-size: 1.2em;
      opacity: 0.9;
      margin-bottom: 15px;
    }

    header .contact {
      font-size: 0.95em;
      opacity: 0.85;
    }

    header .contact a {
      color: white;
      text-decoration: none;
      border-bottom: 1px solid rgba(255,255,255,0.3);
    }

    header .contact a:hover {
      border-bottom-color: white;
    }

    main {
      padding: 40px;
    }

    section {
      margin-bottom: 35px;
    }

    section:last-child {
      margin-bottom: 0;
    }

    h2 {
      color: #667eea;
      font-size: 1.5em;
      margin-bottom: 15px;
      padding-bottom: 8px;
      border-bottom: 2px solid #667eea;
    }

    .summary {
      font-size: 1.05em;
      color: #555;
      line-height: 1.8;
    }

    .job, .education-item, .project {
      margin-bottom: 25px;
    }

    .job-header, .education-header, .project-header {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 8px;
      flex-wrap: wrap;
    }

    .job-title, .degree, .project-name {
      font-size: 1.1em;
      font-weight: 600;
      color: #333;
    }

    .company, .institution {
      font-weight: 600;
      color: #667eea;
    }

    .date {
      color: #888;
      font-size: 0.9em;
      white-space: nowrap;
    }

    .position, .field {
      color: #666;
      font-style: italic;
      margin-bottom: 8px;
    }

    ul {
      margin-left: 20px;
      margin-top: 8px;
    }

    li {
      margin-bottom: 5px;
      color: #555;
    }

    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
    }

    .skill-category {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 6px;
      border-left: 3px solid #667eea;
    }

    .skill-category h3 {
      font-size: 1em;
      margin-bottom: 8px;
      color: #667eea;
    }

    .skill-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .skill-tag {
      background: white;
      padding: 4px 12px;
      border-radius: 15px;
      font-size: 0.9em;
      border: 1px solid #ddd;
    }

    .award {
      margin-bottom: 15px;
    }

    .award-title {
      font-weight: 600;
      color: #333;
    }

    .award-org {
      color: #667eea;
      font-size: 0.95em;
    }

    @media print {
      body {
        background: white;
        padding: 0;
      }

      .container {
        box-shadow: none;
        border-radius: 0;
      }

      header {
        background: #667eea;
      }
    }

    @media (max-width: 600px) {
      header h1 {
        font-size: 2em;
      }

      main {
        padding: 25px;
      }

      .job-header, .education-header, .project-header {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    [[ if .basics ]]
    <header>
      <h1>[[ .basics.name ]]</h1>
      [[ if .basics.label ]]
      <div class="subtitle">[[ .basics.label ]]</div>
      [[ end ]]
      <div class="contact">
        [[ if .basics.email ]]
        <a href="mailto:[[ .basics.email ]]">[[ .basics.email ]]</a>
        [[ end ]]
        [[ if and .basics.email .basics.phone ]] • [[ end ]]
        [[ if .basics.phone ]]
        <a href="tel:[[ .basics.phone ]]">[[ .basics.phone ]]</a>
        [[ end ]]
        [[ if and (or .basics.email .basics.phone) .basics.url ]] • [[ end ]]
        [[ if .basics.url ]]
        <a href="[[ .basics.url ]]" target="_blank">[[ .basics.url | strings.ReplaceAll "https://" "" | strings.ReplaceAll "http://" "" ]]</a>
        [[ end ]]
        [[ if .basics.location ]]
        [[ if or .basics.email .basics.phone .basics.url ]] • [[ end ]]
        [[ .basics.location.city ]][[ if .basics.location.region ]], [[ .basics.location.region ]][[ end ]]
        [[ end ]]
      </div>
    </header>
    [[ end ]]

    <main>
      [[ if .basics.summary ]]
      <section>
        <h2>Summary</h2>
        <p class="summary">[[ .basics.summary ]]</p>
      </section>
      [[ end ]]

      [[ if .work ]]
      <section>
        <h2>Experience</h2>
        [[ range .work ]]
        <div class="job">
          <div class="job-header">
            <div>
              <span class="company">[[ .name ]]</span>
            </div>
            <span class="date">[[ .startDate ]] – [[ if .endDate ]][[ .endDate ]][[ else ]]Present[[ end ]]</span>
          </div>
          <div class="position">[[ .position ]]</div>
          [[ if .summary ]]
          <p>[[ .summary ]]</p>
          [[ end ]]
          [[ if .highlights ]]
          <ul>
            [[ range .highlights ]]
            <li>[[ . ]]</li>
            [[ end ]]
          </ul>
          [[ end ]]
        </div>
        [[ end ]]
      </section>
      [[ end ]]

      [[ if .education ]]
      <section>
        <h2>Education</h2>
        [[ range .education ]]
        <div class="education-item">
          <div class="education-header">
            <div>
              <span class="institution">[[ .institution ]]</span>
            </div>
            <span class="date">[[ if .endDate ]][[ .endDate ]][[ end ]]</span>
          </div>
          <div class="field">[[ .studyType ]][[ if .area ]] in [[ .area ]][[ end ]][[ if .score ]] • GPA: [[ .score ]][[ end ]]</div>
          [[ if .courses ]]
          <p><em>Relevant Courses:</em> [[ .courses | strings.Join ", " ]]</p>
          [[ end ]]
        </div>
        [[ end ]]
      </section>
      [[ end ]]

      [[ if .skills ]]
      <section>
        <h2>Skills</h2>
        <div class="skills-grid">
          [[ range .skills ]]
          <div class="skill-category">
            <h3>[[ .name ]]</h3>
            <div class="skill-tags">
              [[ range .keywords ]]
              <span class="skill-tag">[[ . ]]</span>
              [[ end ]]
            </div>
          </div>
          [[ end ]]
        </div>
      </section>
      [[ end ]]

      [[ if .projects ]]
      <section>
        <h2>Projects</h2>
        [[ range .projects ]]
        <div class="project">
          <div class="project-header">
            <span class="project-name">[[ .name ]]</span>
            [[ if .url ]]
            <a href="[[ .url ]]" target="_blank">[[ .url | strings.ReplaceAll "https://" "" | strings.ReplaceAll "http://" "" ]]</a>
            [[ end ]]
          </div>
          [[ if .description ]]
          <p>[[ .description ]]</p>
          [[ end ]]
          [[ if .highlights ]]
          <ul>
            [[ range .highlights ]]
            <li>[[ . ]]</li>
            [[ end ]]
          </ul>
          [[ end ]]
        </div>
        [[ end ]]
      </section>
      [[ end ]]

      [[ if .awards ]]
      <section>
        <h2>Awards & Honors</h2>
        [[ range .awards ]]
        <div class="award">
          <div>
            <span class="award-title">[[ .title ]]</span> •
            <span class="award-org">[[ .awarder ]]</span>
            [[ if .date ]] • <span class="date">[[ .date ]]</span>[[ end ]]
          </div>
          [[ if .summary ]]
          <p>[[ .summary ]]</p>
          [[ end ]]
        </div>
        [[ end ]]
      </section>
      [[ end ]]
    </main>
  </div>
</body>
</html>
